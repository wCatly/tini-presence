{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for tray app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/tini-presence-core",
          "sidecar": true
        },
        {
          "name": "tini-presence-core",
          "sidecar": true
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-stdin-write",
    "shell:allow-open",
    "updater:default",
    "process:allow-restart"
  ]
}
