{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tini-presence",
  "version": "0.1.0",
  "identifier": "com.florian.tini-presence",
  "build": {
    "beforeDevCommand": "bun run build:sidecar && bun run dev:ui",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build:sidecar && bun run build:ui",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "tini-presence",
        "width": 320,
        "height": 520,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "Info.plist"
    },
    "externalBin": [
      "binaries/tini-presence-core"
    ],
    "category": "public.app-category.utilities"
  }
}
